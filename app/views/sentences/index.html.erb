<p id="notice"><%= notice %></p>

<h1>Sentenças</h1>

<table>
  <thead>
    <tr>
      <th>Criminoso</th>
      <th>Prisão</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td><%= sentence.criminal.name %></td>
        <td><%= sentence.prison.name %></td>
        <td><%= link_to 'Show', sentence %></td>
        <td><%= link_to 'Edit', edit_sentence_path(sentence) %></td>
        <td><%= link_to 'Destroy', sentence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova sentença', new_sentence_path %>
